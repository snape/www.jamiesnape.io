# -*- mode: gitattributes; -*-
# vi: set ft=gitattributes:

[attr]whitespace-0   whitespace=tab-in-indent,trailing-space
[attr]whitespace-2   whitespace=tab-in-indent,tabwidth=2,trailing-space
[attr]whitespace-md  whitespace=-blank-at-eol,blank-at-eof,tab-in-indent

*                    text=auto

*.html               text diff=html whitespace-2
*.ico                binary
*.lock               text linguist-generated whitespace-2
*.md                 text diff=markdown linguist-detectable whitespace-md
*.pdf                binary
*.png                binary
*.rb                 text diff=ruby whitespace-2
*.webmanifest        text linguist-language=json whitespace-2
*.xml                text diff=html linguist-language=xml whitespace-2
*.yml                text whitespace-2

.bundle/config       text linguist-generated linguist-language=yaml whitespace-2
.editorconfig        text whitespace-2
.gitattributes       text export-ignore whitespace-2
.github/CODEOWNERS   text whitespace-2
.gitignore           text export-ignore whitespace-2
.ruby-version        text whitespace-0
_headers             text whitespace-2
_redirects           text whitespace-0
Gemfile              text diff=ruby whitespace-2
Gemfile.lock         text whitespace-2
LICENSE              text linguist-documentation linguist-vendored whitespace-0
NOTICE               text linguist-documentation whitespace-0
README.md            linguist-documentation

.github/**           export-ignore
.github/**/*.md      linguist-documentation
